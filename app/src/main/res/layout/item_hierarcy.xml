<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_hierarchy_icon"
        android:layout_width="@dimen/iv_hierarchy_size"
        android:layout_height="@dimen/iv_hierarchy_size" />

    <TextView
        android:id="@+id/tv_item_hierarchy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/iv_item_hierarchy_icon" />

    <TextView
        android:id="@+id/tv_item_hierarchy_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_item_hierarchy_icon" />

    <TextView
        android:id="@+id/tv_item_hierarchy_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/tv_hierarchy_divider_margin"
        android:layout_marginRight="@dimen/tv_hierarchy_divider_margin"
        android:layout_toRightOf="@id/tv_item_hierarchy_size"
        android:text="|" />

    <TextView
        android:id="@+id/tv_item_hierarchy_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_item_hierarchy_divider" />
</RelativeLayout>
